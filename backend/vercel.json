{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "50mb",
        "includeFiles": ["backend/**", "models/**", "utils/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "This route is not available"
    }
  ]
}